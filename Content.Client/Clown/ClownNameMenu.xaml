<DefaultWindow
    xmlns="https://spacestation14.io"
    Title="Имя клоуна"
    MinSize="300 150"
    SetSize="300 150"
    Name="SurgeryWindow">

    <BoxContainer Orientation="Vertical">
        <Label Name="SurgeryHealth" Text="Введите свое имя"/>
        <LineEdit  Name="InputName"  PlaceHolder="Write Name" Margin="4"/>
        <BoxContainer Orientation="Horizontal" >
            <Button Name="OnSendButton" Margin="3" MinWidth="90" SetWidth="90" Text="ок" Disabled="True"/>
            <Button Name="OnCancelButton"  Margin="3" MinWidth="90" SetWidth="90" Text="cancel" HorizontalAlignment="Right" HorizontalExpand="True" />
        </BoxContainer>
    </BoxContainer>

</DefaultWindow>
